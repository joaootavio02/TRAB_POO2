<Window x:Class="trab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Banco UVV" Height="250" Width="300" Background="#F0F0F0">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Aplicar margens manualmente para espaçamento -->
            <Button Content="Criar Conta" Width="150" Height="40" Margin="0,10,0,10" Style="{StaticResource RoundedButtonStyle}" Click="btnAbrirCriarConta_Click"/>
            <Button Content="Transações" Width="150" Height="40" Margin="0,10,0,10" Style="{StaticResource RoundedButtonStyle}" Click="btnAbrirTransacao_Click"/>
        </StackPanel>
    </Grid>
</Window>
